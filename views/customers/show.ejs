        <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Date of Birth</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% if (customer[0].cats) { %>
                <% customer[0].cats.forEach(function(cat) { %>
                  <tr>
                    <td><%= cat.name %></td>
                    <td><%= cat.dob %></td>
                    <td>
                      <form action="/cats/<%= customer[0].id %>/<%= cat.id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger">Delete</button>
                      </form>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="3">No cats yet.</td>
                </tr>
              <% } %>
            </tbody>
          </table>


